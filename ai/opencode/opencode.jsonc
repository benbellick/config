{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["opencode", "gitlab"],
  "share": "disabled",
  "instructions": ["~/config/ai/shared/AGENTS.md"],
  "permission": {
    "edit": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "*": "ask",

      // Basic shell commands
      "pwd": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "tail *": "allow",
      "head *": "allow",
      "cat *": "allow",

      // Git (read-only)
      "git status": "allow",
      "git status *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git blame *": "allow",
      "git branch": "allow",
      "git branch *": "allow",
      "git tag": "allow",
      "git tag *": "allow",
      "git remote *": "allow",
      "git ls-files *": "allow",
      "git ls-tree *": "allow",
      "git rev-parse *": "allow",
      "git describe *": "allow",
      "git shortlog *": "allow",
      "git stash list": "allow",
      "git reflog *": "allow",
      "git cat-file *": "allow",
      "git name-rev *": "allow",
      "git for-each-ref *": "allow",

      // GitHub CLI (read-only)
      "gh pr view *": "allow",
      "gh pr list": "allow",
      "gh pr list *": "allow",
      "gh pr diff *": "allow",
      "gh pr checks *": "allow",
      "gh pr status": "allow",
      "gh pr status *": "allow",
      "gh issue view *": "allow",
      "gh issue list": "allow",
      "gh issue list *": "allow",
      "gh issue status": "allow",
      "gh issue status *": "allow",
      "gh repo view *": "allow",
      "gh repo list *": "allow",
      "gh run list": "allow",
      "gh run list *": "allow",
      "gh run view *": "allow",
      "gh workflow list": "allow",
      "gh workflow list *": "allow",
      "gh workflow view *": "allow",
      "gh release list": "allow",
      "gh release list *": "allow",
      "gh release view *": "allow",
      "gh search *": "allow",
      "gh gist list *": "allow",
      "gh gist view *": "allow",

      // Rust
      "cargo build": "allow",
      "cargo build *": "allow",
      "cargo check": "allow",
      "cargo check *": "allow",
      "cargo test": "allow",
      "cargo test *": "allow",
      "cargo fmt": "allow",
      "cargo fmt *": "allow",
      "cargo clippy": "allow",
      "cargo clippy *": "allow",
      "cargo run": "allow",
      "cargo run *": "allow",
      "cargo doc *": "allow",
      "rustfmt *": "allow",

      // Go
      "go build": "allow",
      "go build *": "allow",
      "go test": "allow",
      "go test *": "allow",
      "go fmt *": "allow",
      "go vet *": "allow",
      "go run *": "allow",
      "go mod *": "allow",
      "gofmt *": "allow",

      // Java
      "javac *": "allow",
      "java *": "allow",
      "mvn compile": "allow",
      "mvn compile *": "allow",
      "mvn test": "allow",
      "mvn test *": "allow",
      "mvn package": "allow",
      "mvn package *": "allow",
      "mvn clean": "allow",
      "mvn clean *": "allow",
      "mvn verify *": "allow",
      "gradle build": "allow",
      "gradle build *": "allow",
      "gradle test": "allow",
      "gradle test *": "allow",
      "gradle check *": "allow",
      "./gradlew *": "allow",

      // JavaScript / TypeScript
      "npm test": "allow",
      "npm test *": "allow",
      "npm run *": "allow",
      "yarn test": "allow",
      "yarn test *": "allow",
      "yarn run *": "allow",
      "pnpm test": "allow",
      "pnpm test *": "allow",
      "pnpm run *": "allow",
      "bun test *": "allow",
      "bun run *": "allow",

      // Python
      "pytest": "allow",
      "pytest *": "allow",
      "python -m pytest *": "allow",
      "python -m unittest *": "allow",
      "black *": "allow",
      "ruff *": "allow",
      "mypy *": "allow",

      // Build tools
      "make": "allow",
      "make *": "allow",
      "cmake *": "allow",

      // Bazel
      "bazel build *": "allow",
      "bazel test *": "allow",
      "bazel run *": "allow",
      "bazel query *": "allow",
      "bazel cquery *": "allow",
      "bazel aquery *": "allow",
      "bazel info": "allow",
      "bazel info *": "allow",
      "bazel version": "allow",
      "bazel help *": "allow",
      "buildifier *": "allow"
    }
  },
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/sse"
    },
    "datadog": {
      "type": "remote",
      "url": "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp?toolsets=core,software-delivery"
    }
  }
}
