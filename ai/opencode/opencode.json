{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["opencode", "gitlab"],
  "share": "disabled",
  "permission": {
    "edit": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "git status": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git diff *": "allow",
      "git blame *": "allow",
      "gh pr view *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "tail *": "allow",
      "head *": "allow",
      "cat *": "allow",
      "gh issue view *": "allow"
    }
  },
  "mcp": {
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/sse"
    },
    "datadog": {
      "type": "remote",
      "url": "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp?toolsets=core,software-delivery"
    }
  }
}
