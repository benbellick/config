
set encoding=UTF-8
" Add line numbers
set number
set ruler
" Colors 
syntax on
" Spacing set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

set nocompatible
set nowrap

set path=$PWD/**
set wildmenu
set wildmode=longest:full,full

"Remove arrow key functionality
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
